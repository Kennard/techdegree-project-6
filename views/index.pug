extends layout.pug

block content 
  article.grid-container.portfolio-intro
    div
      h1 My Portfolio
      p.lead.text-light
        | A array of projects compiled to reflect my skills as a full stack javascript developer using Node.js and Express.
  article.grid-container.portfolio-index 
    .grid-x.grid-margin-x.small-up-2.medium-up-2.large-up-3
      //- Use 'each' to loop through the images in the data file. Output the images using template literals and interpolation
      each project in projects
        .cell
          a(href=`project/${project.id}`)
            if `${project.id}` == 1
              img.thumbnail(src=`/static/images/${project.image_urls[0]}`, alt=`${project.project_name}`)
            else if `${project.id}` == 2
              img.thumbnail(src=`/static/images/${project.image_urls[0]}`, alt=`${project.project_name}`)
            else if `${project.id}` == 3
              img.thumbnail(src=`/static/images/${project.image_urls[0]}`, alt=`${project.project_name}`)  
            else if `${project.id}` == 4
              img.thumbnail(src=`/static/images/${project.image_urls[0]}`, alt=`${project.project_name}`)
            else
              img.thumbnail(src=`/static/images/${project.image_urls[0]}`, alt=`${project.project_name}`)
            
          h5 #{project.project_name}